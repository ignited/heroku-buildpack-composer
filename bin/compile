#!/usr/bin/env bash

# fail hard
set -o pipefail
# fail harder
set -eu
# move hidden files too, just in case

shopt -s dotglob
BUILD_DIR=$1
CACHE_DIR=$2/php
export COMPOSER_HOME=$CACHE_DIR/.composer

echo "--- Adding Composer Auth {$COMPOSER_HOME/auth.json}"

#cause php
AUTH=$(php -r 'echo base64_decode($argv[1]);' $COMPOSER_AUTH)

echo $AUTH > $COMPOSER_HOME/auth.json